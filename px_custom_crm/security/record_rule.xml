<odoo>
    <!-- Salesperson: Own Leads -->
    <record id="crm_lead_rule_salesperson" model="ir.rule">
        <field name="name">Salesperson: Own Leads</field>
        <field name="model_id" ref="crm.model_crm_lead"/>
        <field name="groups" eval="[(4, ref('sales_team.group_sale_salesman'))]"/>
        <field name="domain_force">['&amp;', ('user_id', '=', user.id), ('user_id', '!=', False)]</field>
<!--<field name="domain_force">['|', ('user_id', '=', user.id), ('user_id', '!=', False)]</field>-->
<!--<field name="domain_force">[('user_id', '=', user.id), ('user_id', '!=', False)]</field>-->
    </record>

    <!-- Sales Manager: All Leads -->
    <record id="crm_lead_rule_manager" model="ir.rule">
        <field name="name">Sales Manager: All Leads</field>
        <field name="model_id" ref="crm.model_crm_lead"/>
        <field name="groups" eval="[(4, ref('sales_team.group_sale_manager'))]"/>
        <field name="domain_force">[(1,'=',1)]</field>
    </record>
    <record id="rule_mail_message_user_own" model="ir.rule">
        <field name="name">Mail Message - Only Own Logs</field>
        <field name="model_id" ref="mail.model_mail_message"/>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        <field name="domain_force">[('author_id', '=', user.partner_id.id)]</field>
    </record>

    <record id="rule_mail_message_admin_all" model="ir.rule">
        <field name="name">Mail Message - Admin All Logs</field>
        <field name="model_id" ref="mail.model_mail_message"/>
        <field name="groups" eval="[(4, ref('base.group_system'))]"/>
        <field name="domain_force">[(1, '=', 1)]</field>
    </record>

</odoo>
