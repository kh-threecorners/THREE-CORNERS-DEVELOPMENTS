<odoo>
    <record id="view_payment_form_inherit_is_cheque" model="ir.ui.view">
        <field name="name">account.payment.form.is.cheque.inherit</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[2]" position="inside">
                <field name="is_cheque_payment"/>
                <field name="cheque_payment_number" invisible="not is_cheque_payment"/>
                <field name="customer_payment_cheque_bank_id" invisible="not is_cheque_payment"/>
                <field name="cheque_payment_due_date" invisible="not is_cheque_payment"/>
            </xpath>
        </field>
    </record>
</odoo>
