<odoo>
    <data>
        <record id="view_product_template_form_inherit_property" model="ir.ui.view">
            <field name="name">product.template.form.inherit.property</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@class='oe_button_box']" position="inside">
                    <button name="action_view_related_property"
                            type="object"
                            string="Related Property Template"
                            class="btn-primary"/>
                </xpath>
                <xpath expr="//field[@name='categ_id']" position="after">
                    <field name="property_product_id"/>
                    <field name="property_maintenance_value"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
