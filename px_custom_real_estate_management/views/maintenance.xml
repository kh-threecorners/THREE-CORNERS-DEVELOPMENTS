<odoo>
        <!-- Action -->
        <record id="action_maintenance_maintenance" model="ir.actions.act_window">
            <field name="name">Maintenance</field>
            <field name="res_model">maintenance.maintenance</field>
            <field name="view_mode">list,form</field>
        </record>

        <!-- Menu -->
        <menuitem id="menu_maintenance" name="Maintenances"
                  parent="real_estate_management.property_configuration_menu"
                  action="action_maintenance_maintenance"/>

        <!-- List View -->
        <record id="view_maintenance_maintenance_tree" model="ir.ui.view">
            <field name="name">maintenance.maintenance.tree</field>
            <field name="model">maintenance.maintenance</field>
            <field name="arch" type="xml">
                <list string="Maintenance">
                    <field name="name"/>
                </list>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_maintenance_maintenance_form" model="ir.ui.view">
            <field name="name">maintenance.maintenance.form</field>
            <field name="model">maintenance.maintenance</field>
            <field name="arch" type="xml">
                <form string="Maintenance">
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
</odoo>
