<odoo>
    <record id="view_product_form_inherit_property" model="ir.ui.view">
        <field name="name">product.product.form.inherit.property</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_open_documents']" position="after">
                <button name="action_view_properties"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-home"
                        string="Properties">
                    <field name="property_count" string="Properties" widget="statinfo"/>
                </button>
            </xpath>
        </field>
    </record>
</odoo>
