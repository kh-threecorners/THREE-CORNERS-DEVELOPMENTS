<odoo>
    <data>
        <!-- Smart Button في form view للـ product.product -->
        <record id="view_product_form_inherit_property_product" model="ir.ui.view">
            <field name="name">product.product.form.inherit.property</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='categ_id']" position="after">
                    <field name="property_product_id"/>
                    <field name="property_maintenance_value"/>
                </xpath>
                <xpath expr="//div[@class='oe_button_box']" position="inside">
                    <button name="action_view_related_property"
                            type="object"
                            string="Related Property"
                            class="btn-primary"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
