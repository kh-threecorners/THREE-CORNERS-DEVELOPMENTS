<odoo>
    <record id="view_move_form_inherit_is_cheque" model="ir.ui.view">
        <field name="name">account.move.form.is.cheque.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[2]" position="inside">
                <field name="is_cheque"/>
                <field name="cheque_number" invisible="not is_cheque"/>
                <field name="customer_cheque_bank_id" invisible="not is_cheque"/>
                <field name="cheque_due_date" invisible="not is_cheque"/>
            </xpath>
        </field>
    </record>
    <record id="view_account_move_filter_inherit" model="ir.ui.view">
        <field name="name">account.move.search.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_account_invoice_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//search" position="inside">
                <field name="cheque_number" string="Cheque Number"/>
            </xpath>
        </field>
    </record>

    <record id="view_out_invoice_tree_inherit" model="ir.ui.view">
        <field name="name">account.out.invoice.list.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_invoice_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//list" position="inside">
                <field name="cheque_number"/>
            </xpath>
        </field>
    </record>
</odoo>
