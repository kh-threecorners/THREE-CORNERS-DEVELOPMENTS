<odoo>
    <!-- Action to open the Bank Tags -->
    <record id="action_bank_tag" model="ir.actions.act_window">
        <field name="name">Bank Tags</field>
        <field name="res_model">bank.tag</field>
        <field name="view_mode">list,form</field>

    </record>

    <!-- Menu under Accounting -> Configuration -->
    <menuitem id="menu_bank_tag"
              name="Bank Tags"
              parent="account.menu_finance_configuration"
              action="action_bank_tag"/>

    <!-- Tree View -->
    <record id="view_bank_tag_tree" model="ir.ui.view">
        <field name="name">bank.tag.tree</field>
        <field name="model">bank.tag</field>
        <field name="arch" type="xml">
            <list string="Bank Tags">
                <field name="name"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_bank_tag_form" model="ir.ui.view">
        <field name="name">bank.tag.form</field>
        <field name="model">bank.tag</field>
        <field name="arch" type="xml">
            <form string="Bank Tag">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
