<odoo>
        <!-- Action -->
     <record id="action_payment_plan" model="ir.actions.act_window">
        <field name="name">Payment Plans</field>
        <field name="res_model">payment.plane</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_payment_plan"
              name="Payment Plans"
              parent="real_estate_management.property_configuration_menu"
              sequence="10"
              action="action_payment_plan"/>
    <!-- Tree View -->
    <record id="view_payment_plan_tree" model="ir.ui.view">
        <field name="name">payment.plan.tree</field>
        <field name="model">payment.plane</field>
        <field name="arch" type="xml">
            <list string="Payment Plans">
                <field name="name"/>
                <field name="discount"/>
                <field name="down_payment_percentage"/>
                <field name="annual_payment_percentage"/>
                <field name="payment_duration"/>
                <field name="payment_frequency"/>
                <field name="payment_start_date"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_payment_plan_form" model="ir.ui.view">
        <field name="name">payment.plan.form</field>
        <field name="model">payment.plane</field>
        <field name="arch" type="xml">
            <form string="Payment Plan">
                 <header>
                    <field name="state" widget="statusbar" options="{'clickable': '1'}"/>
                 </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="discount"/>
                        <field name="down_payment_percentage"/>
                        <field name="annual_payment_percentage"/>
                        <field name="payment_frequency"/>
                        <field name="payment_duration"/>
                        <field name="annual_installments_count"/>
                        <field name="payment_start_date"/>
                        <field name="maintenance_percentage"/>
                        <field name="is_maintenance_in_middle" invisible="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
