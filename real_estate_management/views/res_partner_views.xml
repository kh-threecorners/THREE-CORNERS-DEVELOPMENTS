<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Partner form view inherit -->
    <record id="view_partner_form" model="ir.ui.view">
        <field name="name">res.partner.view.form.inherit.real.estate.management</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="before">
                <header>
                    <button class="btn btn-secondary" invisible="blacklisted" name="action_add_blacklist"
                            string="Add To Blacklist" type="object"/>
                    <button class="btn btn-secondary" invisible="not blacklisted" name="action_remove_blacklist"
                            string="Remove From Blacklist" type="object"/>
                </header>
            </xpath>
            <xpath expr="//field[@name='category_id']" position="after">
                <field invisible="1" name="blacklisted"/>
            </xpath>
            <xpath expr="//field[@name='vat']" position="after">
                <field name="is_developer"/>
                <field name="id_number"/>
                <field name="contact_code"/>
                <field name="nationality"/>
            </xpath>
        </field>


    </record>
    <!-- Partner form view inherit -->
    <record id="blacklist_res_partner_action" model="ir.actions.act_window">
        <field name="name">Customers</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="domain">[('blacklisted', '=', True)]</field>
    </record>
    <!-- Partner menu items -->
    <menuitem id="customers_menu" name="Customers" parent="property_root_menu" sequence="5"/>
    <menuitem action="base.action_partner_form" id="property_customers_menu" name="Customers" parent="customers_menu"
              sequence="3"/>
    <menuitem action="blacklist_res_partner_action" id="property_customers_blacklisted_menu" name="Blacklisted"
              parent="customers_menu" sequence="5"/>
</odoo>
