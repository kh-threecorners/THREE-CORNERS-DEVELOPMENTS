<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Property action -->
    <record id="property_action" model="ir.actions.act_window">
        <field name="name">Property</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">property.property</field>
        <field name="view_mode">kanban,list,form,activity</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create Your First Property!
            </p>
        </field>
    </record>
    <!-- Property menu items -->
    <menuitem groups="real_estate_management.group_property_agent" id="property_root_menu" name="Real Estate Management"
              web_icon="real_estate_management,static/description/icon.png"/>
    <menuitem id="property_menu" name="Property" parent="property_root_menu" sequence="3"/>
    <menuitem action="property_action" id="property_property_menu" name="Properties" parent="property_menu"
              sequence="4"/>
    <!-- Property tree view -->
    <record id="property_property_view_tree" model="ir.ui.view">
        <field name="name">property.property.view.tree</field>
        <field name="model">property.property</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="code"/>
                <field name="property_type"/>
                <field name="landlord_id"/>
                <field name="street"/>
                <field name="city"/>
            </list></field>
    </record>
    <!-- Property form view -->
    <record id="property_property_view_form" model="ir.ui.view">
        <field name="name">property.property.view.form</field>
        <field name="model">property.property</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" statusbar_visible="draft,available" widget="statusbar"/>
                    <button class="btn-primary" invisible="not state" name="action_available" string="Available"
                            type="object"/>
                    <button name="action_create_sale_order" type="object" string="Create Sale Order" class="btn-primary"/>
                    <button class="btn-primary" name="action_create_booking" string="Create Booking"
                            type="object" invisible="state != 'available'"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="action_view_leads"
                            icon="fa-star" invisible="leads_count == 0">
                        <field name="leads_count" widget="statinfo" string="Opportunities"/>
                    </button>
                        <button class="oe_stat_button" icon="fa-map-marker" invisible="not latitude or not longitude"
                                name="action_get_map" string="Locate" type="object"/>
                        <button class="oe_stat_button" icon="fa-dollar" invisible="not state"
                                name="action_property_sale_view" string="Booking" type="object"/>
                        <button class="oe_stat_button" icon="fa-dollar" invisible="not state"
                                name="action_property_rental_view" string="Rental" type="object"/>
                    </div>
                    <field class="oe_avatar" name="image" widget="image"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                        <h3>
                            <field name="code"/>
                        </h3>
                        <br/>
                    </div>
                    <group>
                        <group>
                            <field name="property_project_id"/>
                            <field name="property_type" options="{'horizontal': True}" widget="radio"/>
                            <field name="construct_year"/>
                            <field name="property_tags" widget="many2many_tags"/>
                        </group>
                        <group>
                            <field name="developer_id" readonly="0"
                                   domain="[('is_developer', '=', True)]"/>
                            <field name="license_no"/>
                            <field name="responsible_id"/>
                        </group>
                    </group>
                    <group>
                        <group string="Address Details">
                            <label for="street" string="Address"/>
                            <div class="o_address_format">
                                <field class="o_address_street" name="street" placeholder="Street..."/>
                                <field class="o_address_street" name="street2" placeholder="Street 2..."/>
                                <field class="o_address_city" name="city" placeholder="City"/>
                                <field class="o_address_zip" name="zip" placeholder="ZIP"/>
                                <field class="o_address_state" name="state_id" options='{"no_open": True}'
                                       placeholder="State"/>
                                <field class="o_address_country" name="country_id"
                                       options='{"no_open": True, "no_create": True}' placeholder="Country"/>
                            </div>
                            <field name="latitude"/>
                            <field name="longitude"/>
                            <field name="floor_number"/>
                            <field name="model_number"/>
                        </group>
                        <group name="price_details" string="Price Details">
                            <field name="sale_rent"/>
                            <field invisible="not sale_rent" name="unit_price"/>
                            <field name="meter_price"/>
                            <field invisible="not sale_rent" name="rent_month"/>
                            <field name="landlord_id"/>
                            <field invisible="not sale_rent" name="is_installment_payment"/>
                        </group>
                    </group>
                    <group invisible="not is_installment_payment" string="Installment Payment Terms">
                        <group>
                            <field name="monthly_or_yearly"/>
                            <field name="no_of_installments"/>
                        </group>
                        <group>
                            <field invisible="not monthly_or_yearly" name="no_of_months"/>
                            <field invisible="not monthly_or_yearly" name="no_of_years"/>
                            <field invisible="not unit_price" name="amount_per_installment"/>
                        </group>
                    </group>
                    <group invisible="not property_type" string="Land Details">
                        <group>
                            <field name="land_name"/>
                        </group>
                        <group>
                            <field name="land_area"/>
                        </group>
                    </group>
                    <group invisible="not property_type" string="Residential Details">
                        <group>
                            <field name="type_residence"/>
                            <field name="total_floor"/>
                            <field name="furnishing"/>
                        </group>
                        <group>
                            <field name="bedroom"/>
                            <field name="bathroom"/>
                            <field name="parking"/>
                        </group>
                    </group>
                    <group invisible="not property_type" string="Commercial Details">
                        <group>
                            <field name="shop_name"/>
                            <field name="usage"/>
                        </group>
                        <group>
                            <field name="total_floor"/>
                        </group>
                    </group>
                    <group invisible="not property_type" string="Industrial Details">
                        <group>
                            <field name="industry_name"/>
                            <field name="usage"/>
                        </group>
                        <group>
                            <field name="location"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                        <page string="Images">
                            <field name="property_image_ids"><kanban>
                                <field name="id"/>
                                <field name="name"/>
                                <field name="image"/>
                                <field name="description"/>
                                <templates>
<!--                                    <t t-name="kanban-box">-->
                                        <t t-name="card">
                                        <div t-attf-class="oe_kanban_global_click">
                                            <div class="o_kanban_image">
                                                <field class="oe_avatar" name="image" widget="image"/>
                                            </div>
                                            <div class="oe_kanban_details">
                                                <t class="o_kanban_record_title">
                                                    <strong>
                                                        <field name="name"/>
                                                    </strong>
                                                    <br/>
                                                    <field name="description"/>
                                                </t>
                                            </div>
                                        </div>
                                    </t>
                                </templates>
                            </kanban>
                                <form>
                                    <sheet>
                                        <group>
                                            <group>
                                                <field name="name"/>
                                                <field name="description"/>
                                            </group>
                                            <group>
                                                <field class="oe_avatar" name="image" widget="image"/>
                                            </group>
                                        </group>
                                    </sheet>
                                </form></field>
                        </page>
                        <page name="measurement" string="Measurement">
                            <field name="area_measurement_ids"><list editable="bottom">
                                <field name="name"/>
                                <field name="length"/>
                                <field name="width"/>
                                <field name="height"/>
                                <field name="area"/>
                            </list></field>
                            <h2 class="oe_subtotal_footer oe_right">
                                <group>
                                    <field name="total_sq_feet"/>
                                </group>
                            </h2>
                        </page>
                        <page string="Facilities">
                            <field name="facility_ids"><list>
                                <field name="facility"/>
                            </list></field>
                        </page>
                        <page string="Nearby Connectivity">
                            <field name="nearby_connectivity_ids"><list editable="bottom">
                                <field name="name"/>
                                <field name="direction"/>
                                <field name="kilometer"/>
                            </list></field>
                        </page>
                    </notebook>
                </sheet>
<!--                <div class="oe_chatter">-->
<!--                    <field name="activity_ids"/>-->
<!--                    <field name="message_follower_ids"/>-->
<!--                    <field name="message_ids"/>-->
<!--                </div>-->
            </form></field>
    </record>
