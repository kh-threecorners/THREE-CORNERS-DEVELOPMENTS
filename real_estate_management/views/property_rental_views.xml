<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Property rental action -->
    <record id="property_rental_action" model="ir.actions.act_window">
        <field name="name">Property Rental</field>
        <field name="res_model">property.rental</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Rental record!
            </p></field>
    </record>
    <!-- Property rental menu items -->
    <menuitem action="property_rental_action" id="property_rental_menu" name="Property Rental" parent="property_menu" sequence="8"/>
    <!-- Property rental tree view -->
    <record id="property_rental_view_tree" model="ir.ui.view">
        <field name="name">property.rental.view.tree</field>
        <field name="model">property.rental</field>
        <field name="arch" type="xml">
            <list>
                <field name="property_id"/>
                <field name="renter_id"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="state"/>
            </list></field>
    </record>
    <!-- Property rental form view -->
    <record id="property_rental_view_form" model="ir.ui.view">
        <field name="name">property.rental.view.form</field>
        <field name="model">property.rental</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button class="btn-secondary" invisible="state not in ['draft','in_contract','expired']" name="action_cancel" string="Cancel" type="object"/>
                    <field name="state" options="{'clickable': '1'}" widget="statusbar"/>
                    <button class="oe_highlight" invisible="state not in ['draft']" name="action_create_contract" string="Create Contract" type="object"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" icon="fa-book" invisible="not invoice_count" name="action_view_invoice" type="object">
                            <field name="invoice_count" string="Invoices" widget="statinfo"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="property_id"/>
                            <field name="owner_id"/>
                            <field name="rent_price"/>
                        </group>
                        <group>
                            <field name="renter_id"/>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="next_invoice"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Bills">
                            <field name="rental_bills_ids"><list editable="bottom">
                                    <field name="bill_no"/>
                                    <field name="name"/>
                                    <field name="amount"/>
                                </list></field>
                        </page>
                    </notebook>
                </sheet>
<!--                <div class="oe_chatter">-->
<!--                    <field name="activity_ids"/>-->
<!--                    <field name="message_follower_ids"/>-->
<!--                    <field name="message_ids"/>-->
<!--                </div>-->
            </form></field>
    </record>
</odoo>
