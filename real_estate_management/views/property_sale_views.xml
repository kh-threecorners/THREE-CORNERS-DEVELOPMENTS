<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Property sale action -->
    <record id="property_sale_action" model="ir.actions.act_window">
        <field name="name">Property Booking</field>
        <field name="res_model">property.sale</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Sale Order
            </p></field>
    </record>
    <!-- Property sale menu item -->
    <menuitem action="property_sale_action" id="property_sale_menu" name="Property Booking" parent="property_menu" sequence="5"/>
    <!-- Property sale tree view -->
    <record id="property_sale_view_tree" model="ir.ui.view">
        <field name="name">property.sale.view.tree</field>
        <field name="model">property.sale</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="property_id"/>
                <field name="partner_id"/>
                <field name="sale_price"/>
                <field decoration-info="state=='draft'" decoration-success="state=='confirm'" name="state" widget="badge"/>
            </list></field>
    </record>
    <!-- Property sale form view -->
    <record id="property_sale_view_form" model="ir.ui.view">
        <field name="name">property.sale.view.form</field>
        <field name="model">property.sale</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button class="btn primary" invisible="not invoiced or state not in ['confirm']" name="create_invoice" string="Create Invoice" type="object"/>
                    <button class="btn primary" invisible="not billed or state not in ['confirm']" name="commission_bill" string="Commission Bill" type="object"/>
                    <button class="btn primary" invisible="state not in ['proposed']" name="action_confirm" string="Confirm" type="object" groups="real_estate_management.booking_sale_approval"/>
                    <button name="action_propose" string="Propose" type="object" class="oe_highlight" invisible="state not in ['draft','invisible']"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                       <button class="oe_stat_button" type="object" name="action_view_lead"
                                icon="fa-star" invisible="not lead_id">
                            <span class="o_stat_text">Opportunity</span>
                        </button>
                        <button class="oe_stat_button" icon="fa-file" invisible="not invoiced" name="action_view_invoice" string="Invoices" type="object"/>
                        <button class="oe_stat_button" icon="fa-file" invisible="not billed" name="action_view_commission_bill" string="Commission Bills" type="object"/>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field context="{'res_partner_search_mode': 'customer', 'show_address': 1, 'show_vat': True}" name="partner_id" options='{"always_reload": True}' widget="res_partner_many2one"/>
<!--                            <field name="partner_phone"/>-->
                            <field name="lead_id" invisible="1"/>
<!--                            <field name="partner_mobile"/>-->
<!--                            <field name="partner_email"/>-->
<!--                            <field name="id_number" widget="Id number"/>-->
                            <field invisible="1" name="invoiced"/>
                            <field invisible="1" name="billed"/>
<!--                            <field name="partner_street"/>-->
<!--                            <field name="partner_street2"/>-->
<!--                            <field name="partner_city"/>-->
<!--                            <field name="partner_state_id"/>-->
<!--                            <field name="partner_zip"/>-->
<!--                            <field name="partner_country_id"/>-->
<!--                            <field name="partner_jop"/>-->
<!--                            <field name="contact_code"/>-->
                        </group>
                        <group>
                            <field name="order_date"/>
                            <field invisible="1" name="currency_id"/>
                        </group>
                    </group>
                    <group string="Property Details">
                        <group>
                            <field name="property_id"/>
                            <field name="project_id"/>
                            <field invisible="1" name="is_installment_payment"/>
                            <field name="property_type"/>
                            <field name="floor_number"/>
                            <field name="model_number"/>
                            <field name="unit_area"/>
                        </group>
                        <group>
                            <field name="sale_price" groups="real_estate_management.property_sale_sale_price_approval"/>
                            <field name="sale_price" readonly="1" groups="!real_estate_management.property_sale_sale_price_approval"/>
<!--                            <field name="discount" widget="percent"/>-->
<!--                            <field name="price_after_discount"/>-->
                        </group>
                    </group>
                    <group string="Broker Details">
                        <group>
                            <field name="any_broker"/>
                            <field invisible="not any_broker" name="broker_id"/>
                            <field name="paid"/>
                            <field name="remaining"/>
                            <field name="payment_method"/>
                            <field name="reservation_date"/>
                            <field name="completion_date"/>
                        </group>
                        <group invisible="not any_broker">
                            <field name="commission_plan_id"/>
                            <field name="commission_type"/>
                            <field name="commission"/>
                            <field name="sales_person"/>
                            <field name="sales_manager"/>
                        </group>
                    </group>
                    <!-- Notebook for installment collection -->
                    <notebook invisible="not is_installment_payment">
                        <page name="installment_payment" string="Installment Payment">
                            <field name="property_sale_line_ids"><list editable="bottom" string="Property Sale Line">
                                    <field name="serial_number"/>
                                    <field invisible="1" name="name"/>
                                    <field name="remaining_capital"/>
                                    <field name="capital_repayment" sum="Capital Repayment"/>
                                    <field name="collection_status"/>
                                    <field name="collection_date"/>
                                    <field name="collection_amount" sum="Collection Amount"/>
                                </list></field>
                        </page>
                    </notebook>
                </sheet>
<!--                <div class="oe_chatter">-->
<!--                    <field name="message_follower_ids"/>-->
<!--                    <field name="message_ids"/>-->
<!--                </div>-->
            </form></field>
    </record>
</odoo>
